---
import { Icon } from "astro-icon/components";
import Section from "../Section.astro";

import CV from "@cv";
const { hobbies } = CV.basics;
---

<Section title="Hobbies" gap="2">
  <p class="font-mono opacity-75 print:font-sans">
    <ul
      class="inline-flex flex-wrap gap-4 print:mt-4 [&>li>svg]:text-skin-hue"
    >
      {
        hobbies.map(({ name, icon }) => (
          <li class="flex items-center gap-1 rounded-md border border-solid border-skin-hue/20 bg-skin-button-accent/20 px-1 py-0.5 text-skin-hue print:border-none print:bg-transparent print:p-0 print:text-zinc-800">
            {icon && <Icon name={icon} width={25} height={25} />}
          </li>
        ))
      }
    </ul>
  </p>
</Section>
